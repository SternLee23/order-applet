<!--pages/me/me.wxml-->
<!-- 用户信息 -->
<view class="header">
  <view wx:if="{{!userInfo}}" class="login">
    <button size="mini" type="default" bindtap="getUserInfo">授权登录</button>
  </view>
  <view wx:else class="touxiang">
    <image src="{{userInfo.avatarUrl}}"></image>
    <text>{{userInfo.nickName}}</text>
    <text class="logOut" type="default" bindtap="logOut">退出登录</text>
  </view>
</view>
<!-- 条目布局 -->
<block wx:if="{{userInfo}}">
  <view class="item" bindtap="toMyOrder">
    <text>我的订单</text>
    <view class="right_arrow">
    </view>
  </view>

</block>
<view class="item">
  <button open-type="feedback">反馈建议</button>
  <view class="right_arrow">
  </view>
</view>
<view class="item">
  <button open-type="contact">在线客服</button>
  <view class="right_arrow">
  </view>
</view>
